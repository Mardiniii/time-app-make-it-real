<div class="row text-center">
  <%= form_for(@activity, remote: true) do |f| %>
    <div class="form-group col-md-3">
      <div class="field form-group">
        <%= collection_select(:activity, :project_id, Project.all, :id, :name, {include_blank: true}, {:class => 'form-control'}) %>
      </div>
    </div>

    <div class="form-group col-sm-8">
      <div class="field form-group">
        <%= f.text_field :description, :placeholder => "¿En qué estás trabajando?", :class => "form-control" %>
      </div>
    </div>

    <div class="col-md-1">
      <div class="actions form-group">
        <% if @activity.new_record? %>
          <%= f.submit 'Start', :id => 'success', :class => 'btn btn-success' %>  
        <% else %>
          <%= f.submit 'Stop', :id => 'success', :class => 'btn btn-danger' %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>